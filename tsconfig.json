{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2020", "es2020.string"],
    "target": "ES2020",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "dist/",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
